<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
            http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

<!-- TODO add configuration to find Spring elements, such as Controllers, Services, Repositories, etc -->
	<context:component-scan
		base-package="cat.institutmarianao.controller cat.institutmarianao.repository cat.institutmarianao.service" />
		
	<security:http auto-config="true" use-expressions="true">
		<!-- TODO Configure security context -->
		<security:csrf disabled="true" />

		<security:intercept-url
			pattern="/users" access="hasRole('USER_ROLE')" />
		<security:intercept-url
			pattern="/admin" access="hasRole('ADMIN_ROLE')" />
		<security:intercept-url pattern="/check"
			access="hasRole('ADMIN_ROLE,USER_ROLE')" />

		<security:form-login login-page="/login"
			authentication-failure-url="/loginfailed" />
		<security:logout logout-success-url="/check"
			invalidate-session="true" />
		<security:access-denied-handler
			error-page="/login" />
	</security:http>

	<security:authentication-manager>
		<security:authentication-provider user-service-ref="userDetailsServiceImpl">
		</security:authentication-provider>
	</security:authentication-manager>

	<bean id="webexpressionHandler"
		class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler" />

</beans>